<% content_for :header_links do %> 
  <a href="/lists/new">Create a New List</a>
<% end %> 

<ul id="lists">
  <% @lists.each_with_index do |list, id| %>
    <li>
      <a href="/lists/<%= id %>">
        <h2><%= list[:name] %></h2>
        <%= @lists[id][:todos].size  %>
      </a>
    </li>
  <% end %>
</ul>

