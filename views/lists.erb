<% if session[:success] %> 
  <div class="flash success">
    <p><%= session.delete(:success) %></p>
  </div>
<% end %>

<a href="/lists/new">Create a New List</a>
<ul id="lists">
  <% @lists.each do |list| %>
    <li>
      <a>
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

